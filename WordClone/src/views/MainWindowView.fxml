<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane stylesheets="@../styling/MainWindow.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainWindowController">
   <top>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab style="-fx-border-width:5px;" text="File">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button id="Save" mnemonicParsing="false" onAction="#saveFile" text="Save As">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="testButton" mnemonicParsing="false"  text="testButton">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" text="Button" />
                     </children>
                  </HBox>
               </content>
          </Tab>
          <Tab text="Home">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" />
            </content>
          </Tab>
            <Tab text="Insert">
              <content>
                <AnchorPane />
              </content>
            </Tab>
            <Tab text="Design">
               <content>
                  <AnchorPane />
               </content>
            </Tab>
            <Tab text="Layout">
               <content>
                  <AnchorPane />
               </content>
            </Tab>
            <Tab text="References">
               <content>
                  <AnchorPane />
               </content>
            </Tab>
            <Tab text="Mailings">
               <content>
                  <AnchorPane />
               </content>
            </Tab>
            <Tab text="Review">
               <content>
                  <AnchorPane />
               </content>
            </Tab>
            <Tab text="View">
               <content>
                  <AnchorPane />
               </content>
            </Tab>
            <Tab text="Help">
               <content>
                  <AnchorPane />
               </content>
            </Tab>
            <Tab text="Acrobat">
               <content>
                  <AnchorPane />
               </content>
            </Tab>
        </tabs>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </TabPane>
   </top>
   <center>
      <TextArea fx:id="content" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="WordCount">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
